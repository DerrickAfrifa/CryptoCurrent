{
	"manifest_version": 2,
	"name": "CryptoCurrent",
	"description": "Gives you real time information about crytocurrency markets.",
	"version": "1.2",
	"permissions": [
		"storage"
	],
	"icons": {
		"16": "img/ic16.png",
		"48": "img/ic128.png",
		"128": "img/ic128.png"
	},
	"browser_action": {
		"default_icon": {
			"19": "img/ic128.png",
			"38": "img/ic128.png"
		},
		"default_popup": "popup.html"
	},

    "content_scripts": [{
        "js": ["popup.js"],
        "matches": ["http://*/*", "https://*/*"]
      }],

    "content_security_policy": "script-src 'self' https://api.coinmarketcap.com/v1/ticker/?limit=3; object-src 'self'",

	"web_accessible_resources": [
		"img/ic128.png"
	]
}
